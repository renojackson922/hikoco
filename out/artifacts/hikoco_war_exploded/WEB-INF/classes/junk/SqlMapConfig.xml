<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- configuration 에 순서 존재 -->
<configuration>
    <properties resource="org/silkdog/maven/hikoco/db.properties"/>

    <typeAliases>
        <typeAlias alias="MemberDTO" type="org.silkdog.maven.hikoco.member.dto" />
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="org/silkdog/maven/hikoco/mybatis/1.xml"/>
        <!--<mapper resource="mybatis/2.xml"/>-->
    </mappers>



</configuration>

