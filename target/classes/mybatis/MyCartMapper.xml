    <!-- 테이블 내 존재하는 모든 장바구니 리스트-->
    <select id="entireMyCartList" resultType="org.silkdog.maven.hikoco.mycart.vo.MyCartVO">
        SELECT * FROM hikoco_cart
    </select>

    <!-- 회원의 장바구니 리스트-->
    <select id="myCartList" parameterType="int" resultType="org.silkdog.maven.hikoco.mycart.vo.MyCartVO">
        SELECT * FROM hikoco_cart where mem_id = #{mem_id}
    </select>

    <!-- 회원의 장바구니 확인하기 -->
    <select id="checkCartListByUserInfo" parameterType="int" resultType="org.silkdog.maven.hikoco.mycart.vo.MyCartVO">
        SELECT * from hikoco_cart where mem_id = #{mem_id} and item_id = #{item_id}
    </select>

    <!-- 회원의 장바구니에 담기 -->
    <insert id="addToMyCart" useGeneratedKeys="true" keyProperty="cart_id" parameterType="org.silkdog.maven.hikoco.mycart.vo.MyCartVO">
        INSERT INTO hikoco_cart (mem_id, item_id, cart_count, cart_datetime, cart_ip) VALUES (
          #{mem_id},
          #{item_id},
          #{cart_count},
          #{cart_datetime},
          #{cart_ip}
        )
    </insert>

